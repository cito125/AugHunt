<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_margin="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_created_challenge_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@color/acceptedGreen"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_created_challenge_completed_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_black_48dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_created_challenge_submissions"
                android:layout_toRightOf="@id/iv_created_challenge_completed_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="0"/>

            <ImageView
                android:id="@+id/iv_created_challenge_pursuing_person"
                android:layout_toRightOf="@id/tv_created_challenge_submissions"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_person_black_48dp"/>

            <TextView
                android:id="@+id/tv_created_challenge_players"
                android:layout_toRightOf="@id/iv_created_challenge_pursuing_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"

                android:layout_centerVertical="true"
                android:text="0"/>

            <ImageView
                android:id="@+id/iv_created_challenge_pending_pen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_rate_review_black_48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_created_challenge_players"/>
            <TextView
                android:id="@+id/tv_pending_review"
                android:layout_toRightOf="@id/iv_created_challenge_pending_pen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:text="0"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>