<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Avatar background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#EE2b3e51">

    </ImageView>

    <!-- Trophy and user points -->
    <TextView
        android:id="@+id/tv_main_profile_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="0"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_trophy_24dp"
        android:drawableTint="#FFD600"
        android:drawablePadding="10dp"
        android:background="@color/lightGrey"
        android:padding="5dp"/>

    <!-- Image avatar -->
    <ImageView
        android:id="@+id/iv_main_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Profile name -->
    <TextView
        android:id="@+id/tv_main_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_main_profile_pic"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="UNKNOWN"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/tv_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_profile_name"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text=" CHALLENGES COMPLETED"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_main_profile_total_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_completed"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#AA000000"
        android:padding="5dp"
        android:text="0"
        android:textColor="@color/lightGrey" />

    <TextView
        android:id="@+id/tv_submitted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_main_profile_total_created"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="CHALLENGES SUBMITTED" />

    <TextView
        android:id="@+id/tv_main_profile_total_submitted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_submitted"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#AA000000"
        android:padding="5dp"
        android:text="0"
        android:textColor="@color/lightGrey"
        android:textSize="15dp" />

</RelativeLayout>