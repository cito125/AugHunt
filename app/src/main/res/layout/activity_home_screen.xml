<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.example.andresarango.aughunt.HomeScreenActivity">

    <RelativeLayout
        android:id="@+id/upper_button_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_user_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_button_menu"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_for_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_page_buttons"
            android:layout_below="@id/upper_button_menu"
            android:layout_margin="5dp"
            android:background="#b4d0e5"
            android:text="Find Challenges" />

        <Button
            android:id="@+id/create_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_page_buttons"
            android:layout_margin="5dp"
            android:background="#b4d0e5"
            android:text="My Challenges" />

        <Button
            android:id="@+id/challenge_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_page_buttons"
            android:layout_margin="5dp"
            android:background="#b4d0e5"
            android:text="Challenge History" />

    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"/>
</RelativeLayout>
