<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.example.andresarango.aughunt.HomeScreenActivity">

    <RelativeLayout
        android:id="@+id/upper_button_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_page_buttons">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_button_menu">

        <Button
            android:id="@+id/search_for_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_page_buttons"
            android:layout_below="@id/upper_button_menu"
            android:text="search for challenge" />

        <Button
            android:id="@+id/create_challenge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_page_buttons"
            android:text="create challenge" />

        <Button
            android:id="@+id/challenge_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_page_buttons"
            android:text="challenge history" />

    </LinearLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu_bottom_navigation" />
</RelativeLayout>
