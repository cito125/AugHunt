<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_leader_profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <!-- Profile name -->
        <TextView
            android:id="@+id/tv_leader_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/iv_leader_profile_pic"
            android:text="Unknown"
            android:textSize="20sp" />

        <!-- Completed -->
        <LinearLayout
            android:id="@+id/tv_leader_completed_challenges_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:layout_below="@id/tv_leader_profile_name"
            android:layout_toRightOf="@id/iv_leader_profile_pic"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_all_black_24dp"
                android:gravity="center"
                android:tint="@color/acceptedGreen"
                />
        <TextView
            android:id="@+id/tv_leader_completed_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0"
            android:textSize="15dp" />
        </LinearLayout>

        <!-- Created -->
        <LinearLayout
            android:id="@+id/tv_leader_created_challenges_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:layout_below="@id/tv_leader_profile_name"
            android:layout_toRightOf="@id/tv_leader_completed_challenges_ph"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stars_black_24dp"
                android:gravity="center"
                android:tint="@color/trophyYellow"
                />
        <TextView
            android:id="@+id/tv_leader_created_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0"
            android:textSize="15dp" />
        </LinearLayout>

        <!-- Reviewed -->
        <LinearLayout
            android:id="@+id/tv_leader_reviewed_challenges_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawablePadding="5dp"
            android:layout_below="@id/tv_leader_profile_name"
            android:layout_toRightOf="@id/tv_leader_created_challenges_ph"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gavel_black_24dp"
                android:gravity="center"
                android:tint="@color/colorAccent"
                />
        <TextView
            android:id="@+id/tv_leader_reviewed_challenges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 0"
            android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_leader_user_points_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:background="#10000000"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:id="@+id/tv_leader_user_points"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableTint="@color/trophyYellow"
            android:text="0 "
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_trophy_32dp"
                android:gravity="center"
                android:tint="@color/trophyYellow"
                />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>